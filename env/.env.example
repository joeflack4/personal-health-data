# Google Sheets ID (fallback if not in config.yaml)
# Find this in your Google Sheet URL: https://docs.google.com/spreadsheets/d/SHEET_ID/...
SHEET_ID=

# Debug mode (set to True for local development, False for production)
DEBUG=False

# =============================================================================
# Database Configuration
# =============================================================================

# Active environment: local, production, staging, test
# If not set, defaults to 'production' at runtime
# production/staging/test → use PG_CONNECTION_URL_INTERNAL
# other environments → use PG_CONNECTION_URL_EXTERNAL
ACTIVE_ENV=local

# Use SQLite instead of PostgreSQL (set to True to use SQLite, case-insensitive)
# If this is True, all PostgreSQL settings below are ignored
USE_SQLITE=False

# =============================================================================
# PostgreSQL Configuration
# =============================================================================

# PostgreSQL connection URLs (used when USE_SQLITE is not True)
# Internal URL: for connections from within Render.com infrastructure
PG_CONNECTION_URL_INTERNAL=postgresql://user:password@host/database

# External URL: for connections from local machine or external services
PG_CONNECTION_URL_EXTERNAL=postgresql://user:password@host.provider.com/database

# PostgreSQL connection components (for reference, not used directly)
PG_HOST=
PG_PORT=5432
PG_USER=
PG_PASSWORD=
PG_DATABASE=

# Migration: migrate existing SQLite data to PostgreSQL on initialization
# Set to True to migrate, False or unset to fetch fresh from Google Sheets
PG_INIT_MIGRATE_SQLITE=False
